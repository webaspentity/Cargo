<div class=@((Current == Order) ? "spoiler open" : "spoiler")>
    <button class=@((Disabled) ? "spoiler__title disabled" : "spoiler__title") @onclick="@(()=> OnClick.InvokeAsync(Order))" disabled=@Disabled>@Item?.Title</button>
    <div class="spoiler__content"><p>@Item?.Text</p><div class="spoiler__padding-bottom"></div></div>
</div>

@code {
    [CascadingParameter(Name = "Current")]
    public int Current { get; set; }

    [Parameter]
    public bool Disabled { get; set; } = false;

    [Parameter]
    public int Order { get; set; }

    [Parameter]
    public AccordionItem? Item { get; set; }

    [Parameter]
    public EventCallback<int> OnClick { get; set; }
}
