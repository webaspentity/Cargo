<div class="indicators">
    <CascadingValue Value="Current">
        @for (int i = 1; i <= Count; i++)
        {
            <Indicator Value="@i" />
        }
    </CascadingValue>
</div>

@code {
    [Parameter]
    public int Count { get; set; } = 1;
    [Parameter]
    public int Current { get; set; }
}
